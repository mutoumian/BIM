<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.jitsi">

    <uses-feature android:glEsVersion="0x00020000" />
    <uses-feature android:name="android.hardware.sip.voip" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".android.JitsiApplication"
        android:icon="@drawable/logoblue"
        android:label="@string/app_name"
        android:logo="@drawable/actionbaricon"
        android:theme="@style/JitsiTheme"
        android:allowBackup="false">
        <activity
            android:name=".android.gui.LauncherActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".android.gui.ShutdownActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTask" />

        <activity
            android:name=".android.gui.Jitsi"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="org.jitsi.show_contacts" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".android.gui.account.AccountsListActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".android.gui.account.PresenceStatusActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".android.gui.account.AccountLoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".android.gui.contactlist.AddContactActivity"
            android:label="@string/app_name" />
        <!-- Dialog Activity -->
        <activity
            android:name=".android.gui.DialogActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@android:style/Theme.Holo.Dialog.MinWidth" />
        <!-- Verify Certificate Activity -->
        <activity
            android:name=".impl.androidcertdialog.VerifyCertificateActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@android:style/Theme.Holo.Dialog.MinWidth" />
        <!-- Authorization requested dialog -->
        <activity
            android:name=".android.gui.authorization.AuthorizationRequestedDialog"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/service_gui_AUTHORIZATION_RESPONSE"
            android:theme="@android:style/Theme.Holo.Dialog.MinWidth" />
        <!-- Authentication window service Activity -->
        <activity
            android:name=".impl.androidauthwindow.AuthWindowActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@android:style/Theme.Holo.Dialog.MinWidth" />
        <!-- Request authorization dialog -->
        <activity
            android:name=".android.gui.authorization.RequestAuthorizationDialog"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/service_gui_REQUEST_AUTHORIZATION"
            android:theme="@android:style/Theme.Holo.Dialog.MinWidth" />
        <activity
            android:name=".android.gui.call.CallContactActivity"
            android:icon="@drawable/actionbaricon"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.CALL" />
                <action android:name="android.intent.action.CALL_PRIVILEGED" />

                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="tel" />
            </intent-filter>
        </activity>
        <activity
            android:name=".android.gui.call.VideoCallActivity"
            android:hardwareAccelerated="true"
            android:label="@string/app_name" />
        <activity
            android:name=".android.gui.call.ReceivedCallActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".android.gui.chat.ChatActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" />
        <activity
            android:name=".android.plugin.otr.OtrAuthenticateDialog"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Dialog.MinWidth" />

        <!-- Call control from the status bar notification -->
        <receiver android:name=".android.gui.call.notification.CallControl" android:exported="false">
            <intent-filter>
                <action android:name="org.jitsi.call.control" />
            </intent-filter>
        </receiver>

        <!-- Chat link clicked handler -->
        <activity
            android:name=".android.gui.chat.JitsiProtocolReceiver"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="jitsi" />
            </intent-filter>
        </activity>

        <activity
            android:name=".android.gui.settings.SettingsActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".android.gui.settings.EncodingSettings"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name=".android.gui.settings.EncodingSettings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- MediaCodec list -->
        <activity
            android:name=".android.gui.settings.MediaCodecList"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name=".android.gui.settings.MediaCodecList" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".android.gui.settings.ChatSecuritySettings"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name=".android.gui.settings.ChatSecuritySettings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".android.gui.settings.OtrPrivatekeys"
            android:label="@string/service_gui_settings_OTR_PRIV_KEYS_TITLE">
            <intent-filter>
                <action android:name=".android.gui.settings.OtrPrivatekeys" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".android.gui.settings.OtrFingerprints"
            android:label="@string/service_gui_settings_OTR_FINGERPRINTS_TITLE">
            <intent-filter>
                <action android:name=".android.gui.settings.OtrFingerprints" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Table events settings -->
        <!--<activity android:name=".android.gui.settings.notification.NotificationsTableSettings"
                  android:label="@string/service_gui_settings_EVENTS_TITLE">
            <intent-filter>
                <action android:name=".android.gui.settings.NotificationsSettings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>-->

        <activity
            android:name=".android.gui.settings.notification.NotificationSettings"
            android:label="@string/service_gui_settings_EVENTS_TITLE">
            <intent-filter>
                <action android:name=".android.gui.settings.NotificationsSettings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".android.gui.settings.notification.NotificationDetails" />

        <!-- Basic settings -->
        <activity
            android:name=".android.gui.settings.BasicSettingsActivity"
            android:label="@string/app_name" />

        <!-- Opus settings -->
        <activity-alias
            android:name=".android.gui.settings.OpusSettings"
            android:targetActivity=".android.gui.settings.BasicSettingsActivity">
            <intent-filter>
                <action android:name=".android.gui.settings.OpusSettings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.preference"
                android:resource="@xml/opus_preferences" />
        </activity-alias>

        <!-- Silk settings -->
        <activity-alias
            android:name=".android.gui.settings.SilkSettings"
            android:targetActivity=".android.gui.settings.BasicSettingsActivity">
            <intent-filter>
                <action android:name=".android.gui.settings.SilkSettings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.preference"
                android:resource="@xml/silk_preferences" />
        </activity-alias>

        <!-- Sip settings -->
        <activity
            android:name=".android.gui.settings.SipSettings"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name=".android.gui.settings.SipSettings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Proxy settings -->
        <activity-alias
            android:name=".android.gui.settings.ProxySettings"
            android:targetActivity=".android.gui.settings.BasicSettingsActivity">
            <intent-filter>
                <action android:name=".android.gui.settings.ProxySettings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.preference"
                android:resource="@xml/proxy_preferences" />
        </activity-alias>

        <!-- Dns settings -->
        <activity
            android:name=".android.gui.settings.DnsSettings"
            android:label="@string/service_gui_settings_DNS">
            <intent-filter>
                <action android:name=".android.gui.settings.DnsSettings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.preference"
                android:resource="@xml/dns_preferences" />
        </activity>

        <!-- Logging settings -->
        <activity
            android:name=".android.gui.settings.LoggingSettings"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name=".android.gui.settings.LoggingSettings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Provisioning settings -->
        <activity
            android:name=".android.gui.settings.ProvisioningSettings"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name=".android.gui.settings.ProvisioningSettings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".android.gui.account.settings.AccountPreferencesActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".android.gui.account.settings.EncodingActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".android.gui.account.settings.SecurityActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".android.gui.account.settings.ServerListActivity"
            android:label="@string/app_name" />

        <!--<activity android:name=".android.gui.account.AccountPreferencesActivity"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
               <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
               <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>-->

        <service android:name=".service.osgi.OSGiService" />

        <service
            android:name=".android.gui.account.AccountAuthenticatorService"
            android:exported="true"
            android:process=":auth">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
    </application>
</manifest>